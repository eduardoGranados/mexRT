<ion-view title="Modal Content" style="background-image: url('img/screen.jpg'); background-position-x:50%; background-repeat: no-repeat; background-size: fixed;">
    <ion-header-bar class="bar-secondary bar-dark" id="subtitle">
        <h1 class="title">Cab Found</h1>
        <!--<button class="button  button-small button-assertive" ng-click="closeNewTask()">Cancel</button>-->
    </ion-header-bar>
    <ion-content>
        <div class="list card">

            <div class="item item-avatar">
                <img src="img/taxi_driver.png">
                <label class="item item-input">
                    <span class="input-label">Driver:</span>
                    {{taxiDriver}}
                </label>
            </div>

            <div class="item item-body">
                <label class="item item-input">
                    <span class="input-label">Phone Number:</span>
                    {{taxiPhone}}
                </label>
                <label class="item item-input">
                    <span class="input-label">Model:</span>
                    {{taxiModel}}
                </label>
                <label class="item item-input">
                    <span class="input-label">Plate No:</span>
                    {{taxiPlate}}
                </label>
                <label class="item item-input">
                    <span class="input-label">Taxi Number:</span>
                    {{taxiNumber}}
                </label>
            </div>

        </div>
        <button class="button icon-left ion-map button-block button-balanced" id="secondMap-setter" ng-click="setSecondMap()">
            See the map
        </button>
        <button class="button icon-left ion-map button-block button-balanced" id="hidemodal-btn" ng-click="hideNewTask()" style="display: none">
            See the map
        </button>
        <button ng-click="finishRide()" class="button button-block button--quiet">
            Ride Finished
        </button>
        <!--<button ng-click="goState('home.rate-driver')" class="button button-block button--quiet">-->
            <!--Next-->
        <!--</button>-->
    </ion-content>

</ion-view>